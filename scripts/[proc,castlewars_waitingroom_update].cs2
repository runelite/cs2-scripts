// 2375
[proc,castlewars_waitingroom_update](component $com_castlewars_waitingroom_content0)
if (%castlewars_timer <= 0) {
	if_settext("Waiting for players to join the other team.", $com_castlewars_waitingroom_content0);
} else {
	if_settext("Time until next game starts: <tostring(%castlewars_timer)>", $com_castlewars_waitingroom_content0);
}
